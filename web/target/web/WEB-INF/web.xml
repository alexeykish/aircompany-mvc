<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <display-name>aircompany</display-name>
    <servlet>
        <servlet-name>controller</servlet-name>
        <servlet-class>by.pvt.kish.aircompany.controller.Controller</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>showindex-page</servlet-name>
        <jsp-file>/index.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>addflight-page</servlet-name>
        <jsp-file>/assests/pages/addflight.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>updateflight-page</servlet-name>
        <jsp-file>/assests/pages/editflight.jsp</jsp-file>
    </servlet>

    <servlet>
        <servlet-name>addemployee-page</servlet-name>
        <jsp-file>/assests/pages/addemployee.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>updateemployee-page</servlet-name>
        <jsp-file>/assests/pages/editemployee.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>addteam-page</servlet-name>
        <jsp-file>/assests/pages/addteam.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>updateteam-page</servlet-name>
        <jsp-file>/assests/pages/editteam.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>registration-page</servlet-name>
        <jsp-file>/assests/pages/registration.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>controller</servlet-name>
        <url-pattern>/controller</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>showindex-page</servlet-name>
        <url-pattern>/showindex</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addflight-page</servlet-name>
        <url-pattern>/addflight</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>updateflight-page</servlet-name>
        <url-pattern>/updateflight</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>addemployee-page</servlet-name>
        <url-pattern>/addemployee</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>updateemployee-page</servlet-name>
        <url-pattern>/updateemployee</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addteam-page</servlet-name>
        <url-pattern>/addteam</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>updateteam-page</servlet-name>
        <url-pattern>/updateteam</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>registration-page</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>ConfigFilter</filter-name>
        <filter-class>by.pvt.kish.aircompany.filters.ConfigFilter</filter-class>
    </filter>
    <filter>
        <filter-name>AuthFilter</filter-name>
        <filter-class>by.pvt.kish.aircompany.filters.AuthFilter</filter-class>
    </filter>
    <filter>
        <filter-name>AddFlightFilter</filter-name>
        <filter-class>by.pvt.kish.aircompany.filters.AddFlightFilter</filter-class>
    </filter>
    <filter>
        <filter-name>UpdateFlightFilter</filter-name>
        <filter-class>by.pvt.kish.aircompany.filters.UpdateFlightFilter</filter-class>
    </filter>
    <filter>
        <filter-name>AddTeamFilter</filter-name>
        <filter-class>by.pvt.kish.aircompany.filters.AddTeamFilter</filter-class>
    </filter>
    <filter>
        <filter-name>UpdateTeamFilter</filter-name>
        <filter-class>by.pvt.kish.aircompany.filters.UpdateTeamFilter</filter-class>
    </filter>
    <filter>
        <filter-name>UpdateEmployeeFilter</filter-name>
        <filter-class>by.pvt.kish.aircompany.filters.UpdateEmployeeFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>ConfigFilter</filter-name>
        <url-pattern>*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <url-pattern>/controller/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
        <dispatcher>INCLUDE</dispatcher>
        <dispatcher>ERROR</dispatcher>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AddFlightFilter</filter-name>
        <url-pattern>/addflight</url-pattern>
        <url-pattern>/updateflight</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>UpdateFlightFilter</filter-name>
        <url-pattern>/updateflight</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AddTeamFilter</filter-name>
        <url-pattern>/addteam</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>UpdateTeamFilter</filter-name>
        <url-pattern>/updateteam</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>UpdateEmployeeFilter</filter-name>
        <url-pattern>/updateemployee</url-pattern>
    </filter-mapping>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>